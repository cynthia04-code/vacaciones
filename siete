public class siete{
public static void main(String[]args){

 int operacion = 1;
 int num_uno = 5;
 int num_dos = 8;
 int resultado = 0;

 if (operacion == 1){
 resultado = num_uno + num_dos;
 System.out.println ("El resultado es " + resultado);
 } else if(operacion == 2){
 resultado = num_uno - num_dos;
 System.out.println ("El resultado es " + resultado);
 } else if(operacion == 3){
 resultado = num_uno * num_dos;
 System.out.println ("El resultado es " + resultado);
  } else if(operacion == 4){
 resultado = num_uno / num_dos;
 System.out.println ("El resultado es " + resultado);
  } else
  System.out.println("la opcion no existe");
}
 }
